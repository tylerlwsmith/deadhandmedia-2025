---
const analyticsId = Astro.locals.runtime.env.ANALYTICS_ID
---
{analyticsId ? (
  <!-- Google tag (gtag.js) -->
  <script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=${analyticsId}`}></script>
  <script is:inline>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', analyticsId);
  </script>
) : null}
